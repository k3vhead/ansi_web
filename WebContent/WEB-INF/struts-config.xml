            path="/logoff"
            type="com.ansi.scilla.web.action.LogoffAction">
            <forward name="valid" path="/login.jsp" />
        </action>
        
        <!--    *****************************   -->
		<action
            path="/about_us"
            type="com.ansi.scilla.web.action.DisplayPageAction">
            <forward name="valid" path="/displayPage.jsp" />
        </action>
		<action
			path="/adminMemberList"
			type="com.ansi.scilla.web.action.AdminMemberListAction"
			name="idForm"
			input="/adminMemberList.jsp"
			scope="request">
			<forward name="valid" path="/adminMemberList.jsp" />
		</action>

