	<!--
        Define the default session timeout for the application,
        in minutes.  This value can be modified in a servlet or JSP by
        using the HttpSession.getMaxInactiveInterval or
        HttpSession.setMaxInactiveInterval(int timeout)
    -->
    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>




    <welcome-file-list>
        <welcome-file>index.do</welcome-file>
        <welcome-file>index.jsp</welcome-file>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    
    <error-page>
		<exception-type>com.ansi.scilla.exceptions.TimeoutException</exception-type>
		<location>/home.html</location>
    </error-page>
    <error-page>
		<exception-type>com.ansi.scilla.exceptions.NotAllowedException</exception-type>
		<location>/home.html</location>
    </error-page>
    <error-page>
		<exception-type>com.ansi.scilla.exceptions.ExpiredLoginException</exception-type>
		<location>/myAccount.html</location>
    </error-page>
    <error-page>
        <!--  unauthorized -->
        <error-code>401</error-code>
        <location>/login.jsp</location>
    </error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/404.jsp</location>
	</error-page>    
