<?xml version="1.0" encoding="UTF-8"?>
<web-app 
    id="WebApp_ID" 
    version="2.4" 
    xmlns="http://java.sun.com/xml/ns/j2ee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>ANSI Scilla</display-name>
	<description>ANSI Scilla</description>
    <distributable />

    <!-- Define a filter for handling the session
    <filter>
          <filter-name>SyncSessionFilter</filter-name>
          <filter-class>com.positiontech.session.SyncSessionFilter</filter-class>
    </filter>
    <filter-mapping>
          <filter-name>SyncSessionFilter</filter-name>
          <servlet-name>action</servlet-name>
    </filter-mapping>
    -->


    <servlet>
        <servlet-name>action</servlet-name>
        <servlet-class>org.apache.struts.action.ActionServlet</servlet-class>
        <init-param>
            <!-- location of the struts-config.xml file -->
            <param-name>config</param-name>
		    <param-value>/WEB-INF/struts-config.xml</param-value>
        </init-param>
        <init-param>
            <!-- debug level -->
            <!-- 0 = none -->
            <param-name>debug</param-name>
            <param-value>9</param-value>
        </init-param>
        <init-param>
            <!-- validate the struts-config.xml against the DTD -->
            <param-name>validating</param-name>
            <param-value>true</param-value>
        </init-param>
        <init-param>
            <param-name>properties</param-name>
            <param-value>resources.config</param-value>
        </init-param>

        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>action</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>


	<servlet>
        <servlet-name>address</servlet-name>
        <servlet-class>com.ansi.scilla.web.servlets.AddressServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>address</servlet-name>
        <url-pattern>/address/*</url-pattern>
    </servlet-mapping>

		<servlet>
		<servlet-name>addressSearch</servlet-name>
		<servlet-class>com.ansi.scilla.web.servlets.AddressSearchServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>addressSearch</servlet-name>
		<url-pattern>/addressSearch</url-pattern>
	</servlet-mapping>

